  AbstractReferenceFormRecordViewModelMapper,
  EmployeesReferenceRecordViewModel,
  ReferenceFormRecordViewModel,
  CardFormViewModel,
  SysUtils,
  Classes;

type

  TEmployeesReferenceRecordViewModelMapper = class (TAbstractReferenceFormRecordViewModelMapper)

