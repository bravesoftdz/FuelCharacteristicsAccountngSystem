    public

      AddingNewEmployeeInfoAllowed: Boolean;
      EditingEmployeeInfoAllowed: Boolean;
      RemovingEmployeeInfoAllowed: Boolean;

    public

      property DataSetHolder: TEmployeesReferenceDataSetHolder
